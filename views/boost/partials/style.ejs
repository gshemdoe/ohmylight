<style>
    @import url('https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Gwendolyn&family=Permanent+Marker&family=Ravi+Prakash&display=swap');

    *,
    *::after,
    *::before {
        box-sizing: border-box;
    }

    html {
        width: 380px;
        margin: 0 auto;
        background-color: black;
    }

    body {
        background-color: aliceblue;
        margin: 0;
        width: 360px;
    }

    header {
        background-color: red;
        width: 100%;
        color: white;
        text-align: center;
        padding: 4px;
    }

    header h2 {
        font-family: 'Permanent Marker', cursive;
    }

    header h3 {
        font-family: 'Gwendolyn', cursive;
        margin-top: -12px;
    }

    .points-body {
        margin: 12px auto;
        width: 95%;
        border-radius: 8px;
        border: 1px gray solid;
        background-color: white;
        padding: 12px;
        border-left: 4px dodgerblue solid;
        border-right: 4px dodgerblue solid;
    }

    .points-body .points-circle {
        width: 270px;
        height: 270px;
        border-radius: 50%;
        border: 3px black solid;
        margin: auto;
        text-align: center;
        padding: 52px 8px 4px 8px;
        color: black;
    }

    .points-body .not {
        background-color: red;
        color: black;
    }

    .points-body .able {
        background-color: green;
        color: white;
    }

    .points-body .points-circle .pts-your {
        margin-bottom: -12px;
    }

    .points-body .points-circle .pts {
        font-family: 'Abril Fatface', 'Times New Roman', Times, serif;
    }

    .points-body .points-circle .status,
    .points-body .points-circle .name {
        font-style: italic;
        background-color: white;
        border-radius: 3px;
        padding: 3px;
        border: black 1px solid;
        width: fit-content;
        color: black;
        margin: 0 auto;
    }

    .points-body .points-circle .name {
        border-top-left-radius: 50%;
        border-top-right-radius: 50%;
        padding-top: 8px;
    }

    .points-body .boost-btn {
        margin: auto;
        text-align: center;
    }

    .points-body .boost-btn button {
        border-radius: 4px;
        text-align: center;
        font-weight: bold;
        font-size: larger;
        padding: 12px;
        outline: none;
    }

    .points-body .boost-btn .real {
        cursor: pointer;
        border: 1px black solid;
        background-color: gold;
        box-shadow: black 4px 4px 2px;
        display: none;
    }

    .points-body .boost-btn .shadow {
        cursor: not-allowed;
        background-color: lightblue;
        border: gray;
        color: gray;
    }

    .points-body .boost-btn .real:active {
        background-color: black;
        color: lightblue;
        box-shadow: lightblue 4px 4px 2px;
        border: 1px lightblue solid;
    }

    .points-body .boost-btn span {
        font-size: small;
    }

    footer {
        font-family: "Ravi Prakash", Arial, Helvetica, sans-serif;
        width: 100%;
        background-color: red;
        height: fit-content;
        padding: 12px;
        text-align: center;
        font-size: large;
    }

    footer a {
        text-decoration: none;
        color: white;
        font-size: larger;
    }

    .ads {
        width: 320px;
        text-align: center;
        margin: 24px auto;
        border-radius: 8px;
    }
</style>